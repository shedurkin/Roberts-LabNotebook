	keywords = {Aerobic scope, Bioenergetics, energetics, Energy metabolism, Marine invertebrates, Metabolic markers, Multiple stressors, Stress tolerance},
	pages = {1--15},
	file = {ScienceDirect Snapshot:C\:\\Users\\Owner\\Zotero\\storage\\2C7UVYEZ\\S0141113612000712.html:text/html;Sokolova et al. - 2012 - Energy homeostasis as an integrative tool for asse.pdf:C\:\\Users\\Owner\\Zotero\\storage\\3J6B3YT5\\Sokolova et al. - 2012 - Energy homeostasis as an integrative tool for asse.pdf:application/pdf},
