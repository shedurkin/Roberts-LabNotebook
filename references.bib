@article{hamdoun_phenotypic_2003,
	title = {Phenotypic {Plasticity} of {HSP70} and {HSP70} {Gene} {Expression} in the {Pacific} {Oyster} ({Crassostrea} gigas): {Implications} for {Thermal} {Limits} and {Induction} of {Thermal} {Tolerance}},
